div.carousel.slide.m-lg-5#carousel(data-ride="carousel" data-interval="4000" data-pause="false")
  div.carousel-inner
    each item, index in info
      if index < 22
        if index == 0
          div.carousel-item.active: a(href="#"+(item.thumbnail))
            img.d-block.w-100(src="/img/thumbnail/" + item.thumbnail + ".png")
            div.carousel-caption.d-none.d-md-block
              h5 #{item.time}　#{item.title}
        else
          div.carousel-item: a(href="#"+(item.thumbnail))
            img.d-block.w-100(src="/img/thumbnail/" + item.thumbnail + ".png")
            div.carousel-caption.d-none.d-md-block
              h5 #{item.time}　#{item.title}
