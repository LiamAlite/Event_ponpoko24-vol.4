html, body
  margin 0
  padding 0
  width 100%
  height 100%
  position relative

html
  visibility hidden

html.wf-active
  visibility visible

h2.title
  font-family omnes-pro, sans-serif
  font-weight 800
  font-style normal
  font-size 4em
  color: rgba(#fff, 0.75)
  text-shadow 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)

//slide settings
.slick-slide
  position relative
  & .caption
    border-radius 15px 15px 0px 0px
    transform rotate(0.0001deg)
    position absolute
    left 0
    top 0
    z-index 2
    width 100%
    padding 10px 0px 10px 300px
    background rgba(#222 .5)
    color #eee
    opacity 0
    transition .3s ease
  	font-family heisei-maru-gothic-std, sans-serif
  	font-weight 400
  	font-style normal
    font-size 1.2em
    min-width 200px
    text-align left
.slick-current .caption
  opacity 1
  padding 10px 0px 10px 20px
  transition-delay .75s

.slider-for
  transform rotate(0.0001deg)
  border-radius 15px
  & img
    border-radius 15px
// < 1200px
@media screen and (max-width: 1200px)
  #main-slide
  	height 53vw
  #sub-slide
  	max-height 16vw

// > 1200px
@media screen and (min-width: 1200px)
	#main-slide
		max-height 750px
	#sub-slide
		max-height 250px

//keyframe
@keyframes rainbow
  0%{background-position:0% 82%}
  50%{background-position:100% 19%}
  100%{background-position:0% 82%}

//background
#canvas
  width 100%
  height 100%

.wrapper
  height 100%
  width 100%
  left 0
  right 0
  top 0
  bottom 0
  position absolute
  transform rotate(0.0001deg)
  background linear-gradient(124deg, #FF907F, #E27171, #E2C671, #E1E271, #71E284, #71DDE2, #7771E2, #E377EF, #E679F2);
  background-size 1000vw 1000vw
  animation rainbow 25s ease infinite

//body section
#body
	position absolute
	top 0
	left 0
	bottom 0
	right 0
	margin auto
	margin-top 5px
	font-family heisei-maru-gothic-std, sans-serif
	font-weight 400
	font-style normal

//main content
#main
  border-radius 15px
  margin-bottom 20px
  background-color rgba(#ddd, 0.2)
  padding 0px

.shadow-material
  box-shadow 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)

.left-side, .right-side
	position relative
	white-space nowrap

.left-text, .right-text
	letter-spacing 0.05em
	font-family omnes-pro, sans-serif
	font-weight 800
	font-style normal
	font-size 6em
	position absolute
	-webkit-text-stroke 2px #fff
	text-stroke 2px #fff
	color rgba(#fff, 0.1)
	transition-timing-function ease-in-out
	transition-duration 0.2s
	&:hover
		letter-spacing 0.1em

.left-text
  top 400px
  right -410px
  transform rotate(-90deg)

.right-text
  top 160px
  left -175px
  transform rotate(90deg)

.left-text-sp
  font-family omnes-pro, sans-serif
  font-weight 800
  font-style normal
  font-size 2.5em
  color white
  text-shadow 0px 0px 7.5px rgba(black, .3)
