      $('a[href^="#"]').click(function(tag){
        if(tag.target.innerHTML == "日本語" || tag.target.innerHTML == "English" || tag.target.innerHTML == "中文"){

        }else{
          if ($('body').outerWidth() < 996){
           var offset = 300
          }else{
           var offset = 70
          }
          var speed = 500;
          var href= $(this).attr("href");
          var target = $(href == "#" || href == "" ? 'html' : href);
          var position = target.offset().top;
          $("html, body").animate({scrollTop:position-offset}, speed, "swing");
          return false;
        }
      });
    });

