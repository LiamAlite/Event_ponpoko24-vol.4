  font-style normal
  font-size 1.5em
  color white
  text-shadow 0px 0px 7.5px rgba(black, .3)

.ac-heading
  font-family heisei-maru-gothic-std, sans-serif
  font-weight bold
  font-style normal
  font-size 1.2em
  margin-top 10px
  color rgba(black, 0.8)

.card
  background-color rgba(#eee, 0.3)
  border none
.card-header
  background-color rgba(#eee, 0.5)
  padding 5px 0px 0px 20px
//--------Timeline--------
.cp_timeline04
  border-radius: 0px 15px 15px 15px
  position relative
  margin 0
  padding-bottom 2em
  background-image linear-gradient(
  	-45deg,
    rgba(#eee, 0.7) 25%,
  	white 25%,
  	white 50%,
  	rgba(#eee, 0.7) 50%,
  	rgba(#eee, 0.7) 75%,
  	white 75%,
  	white
  )
  background-size 3px 3px
  background-attachment fixed
  &:before
    position absolute
    top 0px
    left 0px
    width 3px
    height 100%
    content ''
    background linear-gradient(0deg, #E27171, #E2C671, #71E284, #71DDE2, #7771E2)
  & .timeline_item
    border-radius 10px
    padding 2px
    margin-bottom 100px
    margin: 0px 0px 0px 17px
    & .desc
      font-size 1em
      line-height 20px
      margin-top 10px
      padding-left 20px
      border-left 1px solid #880e4f
    & .time_date
      & .time
        font-family omnes-pro, sans-serif
        font-size 2.5em
        font-weight bold
        position relative
        margin 0
        letter-spacing 3px
        color rgba(233,30,99,0.5)
        &:before
          position absolute
          top 40%
          left -25px
          width 15px
          height 15px
          content ''
          -webkit-transform: rotate(45deg)
          transform rotate(45deg)
          border 3px solid rgba(233,30,99,0.75)
          background #fff
      & .flag
        font-size 1.4em
        font-weight bold
        margin 0
        margin-top -10px
        color #880e4f
      & .img-wrap
        background-image url("/img/thumbnail/101.png")
        background-size 100% auto
        border-radius 10px
        padding 3px
        box-shadow 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)
        & > img
          border-radius 10px
          outline-offset -3px
          transition: ease 0.3s

.cp_timeline04 .timeline_item .time_date img.guest
  border-radius 10px
  box-shadow 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)
  outline-offset -3px
  transition ease 0.1s
  background rgba(white, 0.5)
  &:hover
    transform scale(1.1,1.1)

#norio
  position relative
  & .active
    position absolute
    left 0
    top: -50px
    opacity 0
    transition 1s
  &:hover .active
