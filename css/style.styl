// --------common settings--------
html, body
  margin 0
  padding 0
  width 100%
  height 100%
  position relative
  -webkit-overflow-scrolling touch

html
  visibility hidden

html.wf-active
  visibility visible

h2.title
  font-family omnes-pro, sans-serif
  font-weight 800
  font-style normal
  font-size 4em
  color rgba(#fff, 0.75)
  text-shadow 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)

h3
  font-weight bold
  color rgba(black, 0.75)

//--------slide settings--------
.carousel-inner
  border-radius 15px
  box-shadow 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)
.carousel-caption
  position absolute
  bottom 0
  left 0

  width 100%
  text-align left
  padding 20px 0 10px 20%
  transition ease .3s
  color transparent
.carousel-item.active
  & .carousel-caption
      background rgba(black, 0.5)
      color white
      padding 20px 0 10px 2.5%
      opacity 1
      & h5
        font-size 1.3em
        font-family heisei-maru-gothic-std, sans-serif
        font-weight bold
        font-style normal

.slider-for
  transform rotate(0.0001deg)
  border-radius 15px

  & img
    border-radius 15px

.layout-fix-main
  width 100%
  height 56.25%

.layout-fix-sub
  width 50vw
  height 16.6%
//keyframe
@keyframes rainbow
  0%{background-position:0% 82%}
  50%{background-position:100% 19%}
  100%{background-position:0% 82%}

//--------background--------
#canvas
  width 100%
  height 100%

.wrapper
  height 100%
  width 100%
  left 0
  right 0
  top 0
  bottom 0
  position absolute
  transform rotate(0.0001deg)
  background linear-gradient(124deg, #FF907F, #E27171, #E2C671, #E1E271, #71E284, #71DDE2, #7771E2, #E377EF, #E679F2)
  background-size 12000% 5000%
  animation rainbow 25s ease infinite

//--------body section--------
#body
	position absolute
	top 0
	left 0
	bottom 0
	right 0
	margin auto
	margin-top 0px
	font-family heisei-maru-gothic-std, sans-serif
	font-weight 400
	font-style normal

//--------main--------
#main
  border-radius 15px
  margin-bottom 20px
  background-color rgba(#ddd, 0.2)
  padding 0px

.shadow-material
  box-shadow 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)

.left-side, .right-side
