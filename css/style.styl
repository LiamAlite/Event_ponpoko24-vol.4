html, body
  margin 0
  padding 0
  width 100%
  height 100%
  position relative
  -webkit-overflow-scrolling: touch;
html
  visibility hidden


html.wf-active
  visibility visible

h2.title
  font-family omnes-pro, sans-serif
  font-weight 800
  font-style normal
  font-size 4em
  color: rgba(#fff, 0.75)
  text-shadow 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)

//slide settings
.slick-slide
  position relative
  & .caption
    border-radius 15px 15px 0px 0px
    transform rotate(0.0001deg)
    position absolute
    left 0
    top 0
    z-index 2
    width 100%
    padding-left 300px
    background rgba(#222 .5)
    color #eee
    opacity 0
    transition .3s ease
  	font-family heisei-maru-gothic-std, sans-serif
  	font-weight 800
  	font-style normal
    font-size 1.2em
    min-width 200px
    text-align left
.slick-current .caption
  opacity 1
  padding-left 10px
  transition-delay .75s

.slider-for
  transform rotate(0.0001deg)
  border-radius 15px
  & img
    border-radius 15px
// < 1200px
@media screen and (max-width: 1200px)
  #main-slide
  	height 53vw
  #sub-slide
  	max-height 16vw

// > 1200px
@media screen and (min-width: 1200px)
	#main-slide
		max-height 750px
	#sub-slide
		max-height 250px

//keyframe
@keyframes rainbow
  0%{background-position:0% 82%}
  50%{background-position:100% 19%}
  100%{background-position:0% 82%}

//background
#canvas
  width 100%
  height 100%

.wrapper
  height 100%
  width 100%
  left 0
  right 0
  top 0
  bottom 0
  position absolute
  transform rotate(0.0001deg)
  background linear-gradient(124deg, #FF907F, #E27171, #E2C671, #E1E271, #71E284, #71DDE2, #7771E2, #E377EF, #E679F2);
  background-size 1000vw 1000vw
  animation rainbow 25s ease infinite

//body section
#body
	position absolute
	top 0
	left 0
	bottom 0
	right 0
	margin auto
	margin-top 5px
	font-family heisei-maru-gothic-std, sans-serif
	font-weight 400
	font-style normal

//main content
#main
  border-radius 15px
  margin-bottom 20px
  background-color rgba(#ddd, 0.2)
  padding 0px

.shadow-material
  box-shadow 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)

.left-side, .right-side
	position relative
	white-space nowrap

.left-text, .right-text
	letter-spacing 0.05em
	font-family omnes-pro, sans-serif
	font-weight 800
	font-style normal
	font-size 6em
	position absolute
	-webkit-text-stroke 2px #fff
	text-stroke 2px #fff
	color rgba(#fff, 0.1)
	transition-timing-function ease-in-out
	transition-duration 0.2s
	&:hover
		letter-spacing 0.1em

.left-text
  top 400px
  right -410px
  transform rotate(-90deg)

.right-text
  top 160px
  left -175px
  transform rotate(90deg)

.left-text-sp
  font-family omnes-pro, sans-serif
  font-weight 800
  font-style normal
  font-size 2.5em
  color white
  text-shadow 0px 0px 7.5px rgba(black, .3)

.ac-heading
  font-family omnes-pro, sans-serif
  font-weight 400
  font-style normal
  font-size 1.5em
  color black

.card
  background-color rgba(#eee, 0.3)
  border none
.card-header
  background-color rgba(#eee, 0.5)

//Timeline
.cp_timeline04
  position relative
  margin 3em auto
  padding-bottom 2em
  &:before
    position absolute
    top 0px
    left 45px
    width 3px
    height 100%
    content ''
    background linear-gradient(0deg, #E27171, #E2C671, #71E284, #71DDE2, #7771E2);
  & .timeline_item
    margin: 0px 0px 0px 80px
    & .time_date .time
      font-family omnes-pro, sans-serif
      font-size 3em
      font-weight bold
      position relative
      margin 0
      letter-spacing 3px
      color rgba(233,30,99,0.3)
      &:before
        position absolute
        top 50%
        left -43px
        width 20px
        height 20px
        content ''
        -webkit-transform: rotate(45deg)
        transform rotate(45deg)
        border 3px solid #e91e63
        background #fff

.cp_timeline04 .timeline_item .time_date .flag {
font-size: 1.5em;
font-weight: bold;
margin: 0;
margin-top: -25px;
color: #880e4f;
}
.cp_timeline04 .timeline_item .time_date img {
border-radius 10px
box-shadow 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)
outline-offset -3px
}
.cp_timeline04 .timeline_item .desc {
font-size: 1em;
line-height: 20px;
margin-top: 10px;
padding-left: 20px;
border-left: 1px solid #880e4f;
}
@media only screen and (max-width: 767px) {
.cp_timeline04:before {
left: 15px;
}
.cp_timeline04 .timeline_item .time_date .time:before {
left: -32px;
}
.cp_timeline04 .timeline_item {
margin: 0px 0px 0px 40px;
}
.cp_timeline04 .timeline_item .desc {
padding-left: 0px;
border-top: 1px solid #880e4f;
border-left: none;
}
}
.timeline-content
  background-color rgba(white, 0.3)
  height 100%
  border-radius 10px
.guest
  height 120px
  width 120px
  background-color rgba(white, 0.5)
  border solid 2px white
h3
  font-weight: bold;
  color rgba(black, 0.75)
