.effect-fade
  & .tn
    opacity 0
    transform translate(-20px, 0px)
    transition all 500ms
  & .tab-pane
    opacity 0
    transform translate(20px, 0px)
    transition all 500ms
  & .guest-list, .guest-list-sp
    opacity 0
    transform translate(0px, 50px)
    transition all 500ms
  & .icons
    opacity 0
    transform translate(0px, -50px)
    transition all 500ms

  &.effect-scroll
    & .tn
      opacity 1
      transform translate(0, 0)
      transition-delay 150ms
    & .tab-pane
      opacity 1
      transform translate(0, 0)
      transition-delay 150ms
    & .guest-list, .guest-list-sp
      opacity 1
      transform translate(0, 0)
      transition-delay 150ms
    & .icons
      opacity 1
      transform translate(0, 0)
      transition-delay 200ms

