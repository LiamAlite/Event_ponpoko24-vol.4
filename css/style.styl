// --------common settings--------
html, body
  margin 0
  padding 0
  width 100%
  height 100%
  position relative
  -webkit-overflow-scrolling: touch;

html
  visibility hidden

html.wf-active
  visibility visible

h2.title
  font-family omnes-pro, sans-serif
  font-weight 800
  font-style normal
  font-size 4em
  color: rgba(#fff, 0.75)
  text-shadow 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)

h3
  font-weight: bold;
  color rgba(black, 0.75)

//--------slide settings--------
.slick-slide
  position relative
  & .caption
    border-radius 15px 15px 0px 0px
    transform rotate(0.0001deg)
    position absolute
    left 0
    top 0
    z-index 2
    width 100%
    padding-left 300px
    background rgba(#222 .5)
    color #eee
    opacity 0
    transition .3s ease
  	font-family heisei-maru-gothic-std, sans-serif
  	font-weight 800
  	font-style normal
    font-size 1.2em
    min-width 200px
    text-align left
.slick-current .caption
  opacity 1
  padding-left 10px
  transition-delay .75s

.slider-for
  transform rotate(0.0001deg)
  border-radius 15px
  & img
    border-radius 15px
#main-slide
  height calc(width / 16 * 9)
  margin-bottom 15px
// < 1200px

//keyframe
@keyframes rainbow
  0%{background-position:0% 82%}
  50%{background-position:100% 19%}
  100%{background-position:0% 82%}

//--------background--------
#canvas
  width 100%
  height 100%

.wrapper
  height 100%
  width 100%
  left 0
  right 0
  top 0
  bottom 0
  position absolute
  transform rotate(0.0001deg)
  background linear-gradient(124deg, #FF907F, #E27171, #E2C671, #E1E271, #71E284, #71DDE2, #7771E2, #E377EF, #E679F2);
  background-size 10000% 10000%
  animation rainbow 25s ease infinite

//--------body section--------
#body
	position absolute
	top 0
	left 0
	bottom 0
	right 0
	margin auto
	margin-top 5px
	font-family heisei-maru-gothic-std, sans-serif
	font-weight 400
	font-style normal

//--------main--------
#main
  border-radius 15px
  margin-bottom 20px
  background-color rgba(#ddd, 0.2)
  padding 0px

.shadow-material
  box-shadow 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)

.left-side, .right-side
	position relative
	white-space nowrap

.left-text, .right-text
	letter-spacing 0.05em
	font-family omnes-pro, sans-serif
	font-weight 800
	font-style normal
	font-size 6em
	position absolute
	-webkit-text-stroke 2px #fff
	text-stroke 2px #fff
	color rgba(#fff, 0.1)
	transition-timing-function ease-in-out
	transition-duration 0.2s
	&:hover
		letter-spacing 0.1em

.left-text
  top 400px
  right -410px
  transform rotate(-90deg)

.right-text
  top 160px
  left -175px
  transform rotate(90deg)

.left-text-sp, .navbar-brand
  font-family omnes-pro, sans-serif
  font-weight 800
  font-style normal
  font-size 2em
  color white
  text-shadow 0px 0px 7.5px rgba(black, .3)

.ac-heading
  font-family heisei-maru-gothic-std, sans-serif
  font-weight bold
  font-style normal
  font-size 1.2em
  margin-top 10px
  color rgba(black, 0.8)

.card
  background-color rgba(#eee, 0.3)
  border none
.card-header
  background-color rgba(#eee, 0.5)
  padding 5px 0px 0px 20px
//--------Timeline--------
.cp_timeline04
  position relative
  margin 0
  padding-bottom 2em
  background-color rgba(white, 0.3)
  &:before
    position absolute
    top 0px
    left 0px
    width 3px
    height 100%
    content ''
    background linear-gradient(0deg, #E27171, #E2C671, #71E284, #71DDE2, #7771E2);
  & .timeline_item
    border-radius 10px
    padding 2px
    margin-bottom 100px
    margin: 0px 0px 0px 17px
    & .desc
      font-size: 1em;
      line-height: 20px;
      margin-top: 10px;
      padding-left: 20px;
      border-left: 1px solid #880e4f;
    & .time_date
      & .time
        font-family omnes-pro, sans-serif
        font-size 2.5em
        font-weight bold
        position relative
        margin 0
        letter-spacing 3px
        color rgba(233,30,99,0.5)
        &:before
          position absolute
          top 40%
          left -25px
          width 15px
          height 15px
          content ''
          -webkit-transform: rotate(45deg)
          transform rotate(45deg)
          border 3px solid rgba(233,30,99,0.75)
          background #fff
      & .flag
        font-size: 1.4em
        font-weight: bold
        margin: 0
        margin-top: -10px
        color: #880e4f
      & .img-wrap
        background-image url("/img/thumbnail/99.png")
        background-size: 100% auto;
        border-radius 10px
        & > img
          border-radius 10px
          box-shadow 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)
          outline-offset -3px
          transition: ease 0.3s
          &:hover
            cursor: pointer
            opacity: 0.25

.cp_timeline04 .timeline_item .time_date img.guest
  border-radius 10px
  box-shadow 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22)
  outline-offset -3px
  transition: ease 0.1s
  background rgba(white, 0.5)
  &:hover
    transform: scale(1.1,1.1);
.guest
  height 110px
  width 110px
  &:hover
    cursor pointer
    transform: translate(0px,-7.5px);

.guest-list
  & a:nth-child(5n) .img-thumbnail
    border solid 2px #E27171
  & a:nth-child(5n+1) .img-thumbnail
    border solid 2px #E2C671
  & a:nth-child(5n+2) .img-thumbnail
    border solid 2px #71E284
  & a:nth-child(5n+3) .img-thumbnail
    border solid 2px #71DDE2
  & a:nth-child(5n+4) .img-thumbnail
    border solid 2px #7771E2

.guest-list-sp
  & div:nth-child(5n) .img-thumbnail
    border solid 2px #E27171
  & div:nth-child(5n+1) .img-thumbnail
    border solid 2px #E2C671
  & div:nth-child(5n+2) .img-thumbnail
    border solid 2px #71E284
  & div:nth-child(5n+3) .img-thumbnail
    border solid 2px #71DDE2
  & div:nth-child(5n+4) .img-thumbnail
    border solid 2px #7771E2

@media only screen and (max-width: 767px) {
  .cp_timeline04:before {
  left: 0px;
  }
  .cp_timeline04 .timeline_item .time_date .time:before {
  left: -15px;
  }
  .cp_timeline04 .timeline_item {
  margin: 0px 0px 0px 10px;
}
  .cp_timeline04 .timeline_item .desc {
  padding-left: 0px;
  border-top: 1px solid #880e4f;
  border-left: none;
  }
}



//button
.sns_btn
  display: inline-block;
  color: #fff;
  height: 1.75em;
  width: 1.75em;
  position: relative;
  font-size: 1.5em;
  border-radius: 0.3125em;
  box-shadow: 0 0.1875em 0.3125em 0 rgba(0, 0, 0, 0.35);
  -webkit-transition: all .2s;
  -moz-transition: all .2s;
  transition: all .2s;
  overflow: hidden;
  i
    position: absolute;
    top: 25%;
    left: 50%;
    transform: translateX(-50%);
    overflow: auto;
  &:hover
    transform: scale(1.2);
    box-shadow: 0 0.3125em 0.9375em 0 rgba(0, 0, 0, 0.4);
  &:active
    transform: scale(0.9);
    box-shadow: 0 0.125em 0.1875em 0 rgba(0, 0, 0, 0.4);

